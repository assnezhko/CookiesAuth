@model CookiesAuth.Models.ViewModels.LoginModel

@{
    Layout = null;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
<link type="text/css" rel="stylesheet" href="~/css/Auth/Login/Login.css" />
<link type="text/css" rel="stylesheet" href="~/lib/bootstrapv3.3.7/dist/css/bootstrap.css" />

<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal was-validated", novalidate = "" }))
            {
                <span class="heading">@Resource.LoginHeader</span>

                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { type = "email", @class = "form-control", id = "Email", placeholder = @Resource.LoginPlaceHolderEmail })
                    <i class="fa fa-user"></i>
                    @Html.ValidationMessageFor(m => m.Email)
                </div>

                <div class="form-group help">
                    @Html.PasswordFor(p => p.Password, new { @class = "form-control", id = "Password", placeholder = @Resource.LoginPlaceHolderPassword })
                    <i class="fa fa-lock"></i>
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                @*<div class="validation" asp-validation-summary="ModelOnly"></div>*@
                <div class="form-group">
                    <button type="submit" class="btn btn-default">@Resource.LoginSubmitButtonName</button>
                    <button type="button" onclick="location.href='@Url.Action("Register", "Account")'" class="btn btn-default">@Resource.LoginRegButtonName</button>
                </div>
            }
        </div>
    </div>
</div><
